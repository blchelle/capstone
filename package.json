{
  "private": true,
  "name": "example-monorepo",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "client": "yarn workspace client build",
    "server": "yarn workspace server start",
    "start": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\""
  },
  "dependencies": {
    "concurrently": "^7.0.0"
  }
}